#include <Arduino_MKRENV.h>

int relay = 2;

void setup() {
  pinMode (relay, OUTPUT);
  Serial.begin(9600);
}

void loop() {

  float valgus  = ENV.readIlluminance();
  
  if(valgus <= 350){
    digitalWrite(relay, HIGH);
  }
  else{
    digitalWrite(relay, LOW);
  }
  
  Serial.print("Valgustugevus: ");
  Serial.println(valgus);
  delay(1000);
}
